<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Button" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingEnd">30dp</item>
    </style>
    
    <style name="Button.Primary">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:background">@drawable/shape_rectangle_red</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextView">

    </style>

    <style name="TextView.HighLight">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

</resources>
